server {
    server_name beta.thefirstspine.fr;

    location / {
        proxy_pass http://127.0.0.1:1337;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/beta.thefirstspine.fr/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/beta.thefirstspine.fr/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = beta.thefirstspine.fr) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name beta.thefirstspine.fr;
    return 404; # managed by Certbot


}