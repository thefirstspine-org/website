<%- include('../elements/nav.ejs') %>

<div id="subscribe" class="">
  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2">
        <div class="columns">
          <form class="column" method="POST" action="/subscribe?redirect=<%= redirect %>&refer=<%= refering ? refering.code : '' %>">
            <h1 class="is-size-3 has-text-centered">INSCRIPTION</h1>
            <% if (refering) { %>
              <p class="has-text-pink has-text-centered is-size-3 is-uppercase">Lien d'affiliation activé</p>
              <p class="has-text-centered has-text-grey">Vous allez vous inscrire avec un lien de parainage.</p>
              <hr />
            <% } %>
            <% if(typeof(errors) !== 'undefined' && errors && errors.length) { %>
              <% errors.forEach(function(error){ %>
                <article  class="message is-danger">
                  <div class="message-body">
                    <%= error %>
                  </div>
                </article >
              <% }); %>
            <% } %>
            <div class="field">
              <div class="control has-icons-left">
                <input class="input is-medium" type="email" name="email" placeholder="Adresse e-mail">
                <span class="icon is-medium is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <div class="control has-icons-left">
                <input class="input is-medium" type="password" name="password" placeholder="Mot de passe (8 caractères minimum)">
                <span class="icon is-medium is-left">
                  <i class="fas fa-key"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label class="checkbox has-text-white">
                <input type="checkbox" name="conditions" value="accept" />
                J'accepte les <a class="has-text-primary" target="_blank" href="/cgu">conditions d'utilisations</a>
              </label>
            </div>
            <div class="buttons">
              <div class="field">
                <div class="control">
                  <input type="submit" value="Inscription" class="button is-primary is-size-5" />
                </div>
              </div>
              <div class="field">
                <div class="columns">
                  <div class="column">
                    <hr class="middle" />
                  </div>
                  <div class="column has-text-centered is-one-quarter">
                    <span class="middle">ou</span>
                  </div>
                  <div class="column">
                    <hr class="middle" />
                  </div>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <facebook-login></facebook-login>
                </div>
              </div>
            </div>
          </form>
          <div class="column is-one-third">
            <div class="illustration"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../elements/footer.ejs') %>
