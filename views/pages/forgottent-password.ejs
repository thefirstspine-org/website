<%- include('../elements/nav.ejs') %>

<div id="forgotten-password">
  <div class="container">
    <div class="columns">
      <div class="column is-6 is-offset-3">
        <form method="POST" action="/forgotten-password?redirect=<%= redirect %>">
          <h1 class="is-size-3 has-text-centered">MOT DE PASSE OUBLIE</h1>
          <% if(typeof(errors) !== 'undefined' && errors && errors.length) { %>
            <% errors.forEach(function(error){ %>
              <article  class="message is-danger">
                <div class="message-body">
                  <%= error %>
                </div>
              </article >
            <% }); %>
          <% } %>
          <% if(typeof(messages) !== 'undefined' && messages && messages.length) { %>
            <% messages.forEach(function(error){ %>
              <article  class="message is-success">
                <div class="message-body">
                  <%= error %>
                </div>
              </article >
            <% }); %>
          <% } %>
          <p>Vous avez perdu votre mot de passe ? Entrez votre adresse e-mail en-dessous et nous vous renverrons un mot de passe :</p>
          <p>&nbsp;</p>
          <div class="field">
            <div class="control has-icons-left">
              <input class="input is-medium" type="email" name="email" placeholder="Adresse e-mail">
              <span class="icon is-medium is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>
          <div class="buttons">
            <div class="field">
              <div class="control">
                <input type="submit" value="Renvoyer un mot de passe" class="button is-primary is-size-5" />
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../elements/footer.ejs') %>
