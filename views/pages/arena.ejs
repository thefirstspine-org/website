<%- include('../elements/nav.ejs') %>

<div id="arena">
  <div class="arena-header">
    <div class="container">
      <h1 class="has-text-centered has-text-primary is-uppercase is-size-1" style="margin: .5em 0">
        <%= __("arena.playOnline") %>
      </h1>
      <p class="has-text-centered">
        <% if (windowsVersion) { %>
        <a class="button is-info is-size-5" href="/download/windows">
          <i class="fab fa-windows"></i> &nbsp;
          <%= __("arena.windows") %> (v<%= windowsVersion %>)
        </a>
        <a class="button is-link is-size-5" href="https://play.thefirstspine.fr/">
          <i class="fas fa-desktop"></i> &nbsp;
          <%= __("arena.browser") %> (v<%= windowsVersion %>)
        </a>
        <% } else { %>
          <a disabled class="button is-info is-size-5">
            <i class="fab fa-windows"></i> &nbsp;
            <%= __("arena.soon") %>
          </a>
          <a disabled class="button is-link is-size-5">
            <i class="fas fa-desktop"></i> &nbsp;
            <%= __("arena.soon") %>
          </a>
        <% } %>
        
        <a class="button is-android is-size-5" href="https://play.google.com/store/apps/details?id=fr.thefirstspine.arena.mobile" target="_blank">
          <i class="fab fa-android"></i> &nbsp;
          <%= __("arena.googlePlay") %>
        </a>
      </p>
    </div>
  </div>

  <div class="separator"></div>

  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2 has-text-centered">
        <p class="has-margin-top-2 is-size-4"><%= __("arena.introduction") %></p>
        <img class="has-margin-top-2" src="images/arena-0.png" />
      </div>
    </div>

    <div class="columns is-vcentered">
      <div class="column has-text-centered">
        <img src="images/arena-1.png" />
      </div>
      <div class="column">
        <h3 class="has-text-primary is-size-3"><%= __("arena.allTheContentTitle") %></h3>
        <p class="has-margin-top-2"><%= __("arena.allTheContentText1") %></p>
        <p class="has-margin-top-2"><%= __("arena.allTheContentText2") %></p>
      </div>
    </div>
    
    <div class="columns is-vcentered">
      <div class="column">
        <h3 class="has-text-primary is-size-3"><%= __("arena.cyclesTitle") %></h3>
        <p class="has-margin-top-2"><%= __("arena.cyclesText") %></p>
      </div>
      <div class="column has-text-centered">
        <img src="images/arena-2.png" />
      </div>
    </div>
    
    <div class="columns is-vcentered">
      <div class="column has-text-centered">
        <img src="images/arena-3.png" />
      </div>
      <div class="column">
        <h3 class="has-text-primary is-size-3"><%= __("arena.versionsTitle") %></h3>
        <p class="has-margin-top-2"><%= __("arena.versionsText1") %></p>
        <p class="has-margin-top-2"><%= __("arena.versionsText2") %></p>
      </div>
    </div>
    
    <div class="columns is-vcentered">
      <div class="column">
        <h3 class="has-text-primary is-size-3"><%= __("arena.helpTitle") %></h3>
        <p class="has-margin-top-2"><%= __("arena.helpText") %></p>
      </div>
      <div class="column has-text-centered">
        <img src="images/arena-4.png" />
      </div>
    </div>
  </div>

  <div class="separator has-margin"></div>

  <div class="container">
    <p class="is-size-3 is-uppercase has-text-centered has-text-primary"><%= __("arena.services") %></p>
    <div class="level has-margin-top-2">
      <div class="level-item has-text-centered">
        <div>
          <p class="heading"><%= __("arena.arena") %></p>
          <p class="title">
            <service-checker url="https://arena.thefirstspine.fr/status"></service-checker>
          </p>
        </div>
      </div>
      <div class="level-item has-text-centered">
